<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    android:layout_marginLeft="@dimen/margin"    android:layout_marginRight="@dimen/margin"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <android.support.v7.widget.CardView        android:id="@+id/cv_item"        app:cardCornerRadius="@dimen/card"        app:cardElevation="@dimen/card"        app:cardUseCompatPadding="true"        app:cardMaxElevation="@dimen/card"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:orientation="vertical"            android:padding="@dimen/margin"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:id="@+id/tv_date"                android:layout_marginBottom="@dimen/margin"                android:gravity="start"                android:text="@string/date"                android:textSize="12sp"                android:layout_width="match_parent"                android:layout_height="wrap_content" />            <TextView                android:id="@+id/tv_title"                android:text="@string/title"                android:gravity="start"                android:textSize="16sp"                android:textStyle="bold"                android:layout_marginBottom="@dimen/card"                android:layout_width="match_parent"                android:layout_height="wrap_content" />            <TextView                android:id="@+id/tv_desc"                android:text="@string/description"                android:gravity="start"                android:textSize="14sp"                android:layout_width="match_parent"                android:layout_height="wrap_content" />        </LinearLayout>    </android.support.v7.widget.CardView></LinearLayout>